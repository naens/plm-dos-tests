#!/bin/sh

command="$@"
tmpfile='tmp.$$$'
SDL_VIDEODRIVER=dummy SDL_AUDIODRIVER=dummy \
	dosbox	-c "mount c $(pwd)" \
		-c "c:" \
		-c "set path=%path%;c:\disk\tasm\bin" \
		-c "$command > tmp.\$\$\$" \
		-c "exit" > /dev/null

for f in $(find . ! -path './.git*' ! -path './troff/*' ! -path './docs/*' ! -name Makefile ! -name TODO)
do
    fn=$(echo "$f" | tr [:upper:] [:lower:])
    if [ ! "$f" = "$fn" -a ! "$f" = "Makefile" ]
    then
        mv "$f" "$fn"
    fi
done

if [ -f $tmpfile ]
then
    cat $tmpfile
    rm $tmpfile
fi
