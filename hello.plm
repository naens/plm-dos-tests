/****p* plm-exercises/hello
 *  NAME
 *    hello -- Print 'HELLO!' and exit
 *  DESCRIPTION
 *    Print 'HELLO!' and exit.
 *  USES
 *    cons and sys modules
 ****
 */
hello:
do;

$include ('sys.ext')
$include ('cons.ext')

declare main label public;

main:
    call prstr(.('HELLO!', 13, 10, 0));
    call prstr(.('abcdef', 13, 10, 0));
    call prstr(.('ABCDEFGH', 0));
    call term;
end hello;
