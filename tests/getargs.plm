testargs:
do;

$include (cons.ext)
$include (sys.ext)


    declare i word;
    declare j word;
    declare argc word;
    declare pargv address;
    declare argv based pargv address;
    declare pstr address;
    declare str based pstr address;

    call getargs(.argc, .pargv);
    call prcrlf;
    pstr = pargv;
    do i = 0 to argc - 1;
        call prhexbyte(byte(i));
        call prchr(':');
        call prstr(str);
        call prcrlf;
        pstr = pstr + 2;
    end;


    call term;

end;
